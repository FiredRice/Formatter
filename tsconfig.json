{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2018",
		"lib": [
			"es2018"
		],
		"outDir": "lib/node",
		"rootDir": "./src",
		"strict": true,
		"sourceMap": false,
		"inlineSources": false,
		"removeComments": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
	},
	"exclude": [
		"lib",
		"bin",
		"node_modules",
	]
}